pipeline {
    agent any
    environment {
        PYTHONPATH = "${WORKSPACE}"
        ACCESS_KEY = credentials('40b821ba-acf1-40cc-93ee-d34edd16199e')
    }
    stages {
        stage('Step1') {
            input {
                    message "Input some message!"
                    ok "Ok"
                    submitter "sigalhu"
                    parameters {
                    string(name: 'message1', defaultValue: 'value1', description: 'Input message1!')
                    string(name: 'message2', defaultValue: 'value2', description: 'Input message2!')
                }
            }
            steps {
                echo 'step1'
                sh "python ${PYTHONPATH}/py_pipeline/step1.py"
            }
        }
        stage('Step2') {
            steps {
                echo 'step2'
                sh "python ${PYTHONPATH}/py_pipeline/step2.py"
            }
        }
        stage('Step3') {
            steps {
                echo 'step3'
                sh "python ${PYTHONPATH}/py_pipeline/step3.py"
            }
        }
    }
}